# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /test                       controllers.database.PostgresConnector.insert
GET     /importForm                 controllers.Application.importForm
GET     /importResult/*success/*nb  controllers.Application.importResult(success, nb)
GET     /spatializeForm             controllers.Application.spatializeForm
GET     /spatializeResult/*nbSuccess/*nbFailure  controllers.Application.spatializeResult(nbSuccess, nbFailure)
GET     /contact                    controllers.Application.contact

POST     /import                    controllers.Application.importData
POST     /spatialize                controllers.Application.spatializeData

# Get sensor logs (by id)
GET     /sensors/*sId               controllers.Application.getSensorById(sId)
GET     /gpslogs/*gId               controllers.Application.getGpsLogById(gId)
GET     /compasslogs/*cId           controllers.Application.getCompassLogById(cId)
GET     /temperaturelogs/*tId       controllers.Application.getTemperatureLogById(tId)
GET     /radiometerlogs/*rId        controllers.Application.getRadiometerLogById(rId)
GET     /windlogs/*wId              controllers.Application.getWindLogById(wId)


# Get sensor logs (by time interval)
GET     /api/*format/gps/from/*startTime/to/*endTime/sensorid/*sid              controllers.Application.getGpsLogByTimeInterval(format, startTime, endTime, sid)
GET     /api/*format/compass/from/*startTime/to/*endTime/sensorid/*sid          controllers.Application.getCompassLogByTimeInterval(format, startTime, endTime, sid)
GET     /api/*format/temperature/from/*startTime/to/*endTime/sensorid/*sid      controllers.Application.getTemperatureLogByTimeIntervalAndSensor(format, startTime, endTime, sid)
GET     /api/*format/radiometer/from/*startTime/to/*endTime/sensorid/*sid       controllers.Application.getRadiometerLogByTimeInterval(format, startTime, endTime, sid)
GET     /api/*format/wind/from/*startTime/to/*endTime/sensorid/*sid             controllers.Application.getWindLogByTimeInterval(format, startTime, endTime, sid)
GET     /api/data                                                               controllers.Application.getData

# Get misc
GET     /api/dates                                          controllers.Application.getLogDates
GET     /api/times/fordate/*date                            controllers.Application.getLogTimesForDate(date)
GET     /api/sensors/from/*startDate/to/*endDate            controllers.Application.getSensorByDatetime(startDate, endDate)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
